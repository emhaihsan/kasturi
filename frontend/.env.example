# Privy.io Configuration
# Get your App ID from https://dashboard.privy.io/
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# Lisk Network Configuration
NEXT_PUBLIC_LISK_RPC_URL=https://rpc.sepolia-api.lisk.com
NEXT_PUBLIC_LISK_CHAIN_ID=4202

# Contract Addresses (Lisk Sepolia - Deployed)
NEXT_PUBLIC_KASTURI_TOKEN=YOUR_TOKEN_ADDRESS
NEXT_PUBLIC_KASTURI_SBT=YOUR_SBT_ADDRESS
NEXT_PUBLIC_KASTURI_VOUCHER=YOUR_VOUCHER_ADDRESS
NEXT_PUBLIC_KASTURI_MAIN=YOUR_MAIN_ADDRESS

# Backend Wallet (for server contract calls)
# WARNING: Keep this secret! Never commit actual values to git.
BACKEND_PRIVATE_KEY=your_backend_private_key_here
BACKEND_ADDRESS=your_backend_wallet_address_here

# Database (use Railway, Supabase, or Neon free tier)
DATABASE_URL=postgresql://user:password@localhost:5432/kasturi

# Pinata IPFS Configuration (Optional - for SBT metadata)
PINATA_API_KEY=YOUR_PINATA
PINATA_SECRET_KEY=YOUR_PINATA_SECRET_KEY
PINATA_JWT=YOUR_PINATA_JWT
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs
